<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-init-method="turnOnLight"
       default-destroy-method="turnOffLight">

    <context:annotation-config />

    <bean id="dev.dposadsky.spring.performers.Juggler" class="dev.dposadsky.spring.performers.Juggler" >
        <constructor-arg value="15" />
    </bean>

    <bean id="dev.dposadsky.spring.performers.PoeticJuggler" class="dev.dposadsky.spring.performers.PoeticJuggler">
        <constructor-arg value="15" />
        <constructor-arg ref="dev.dposadsky.spring.poems.Sonnet29" />
    </bean>

    <bean id="dev.dposadsky.spring.poems.Sonnet29" class="dev.dposadsky.spring.poems.Sonnet29" />

    <bean id="dev.dposadsky.spring.Stage" class="dev.dposadsky.spring.Stage" factory-method="getInstance" />

    <bean id="dev.dposadsky.spring.Auditorium" class="dev.dposadsky.spring.Auditorium"
          init-method="turnOnLight" destroy-method="turnOffLight" />

    <bean id="dev.dposadsky.spring.DefaultInitBean" class="dev.dposadsky.spring.DefaultInitBean" />

    <bean id="instrumentalist" class="dev.dposadsky.spring.performers.Instrumentalist" >
        <property name="song" value="Jingle Bells" />
        <property name="instrument">
            <bean class="dev.dposadsky.spring.instruments.Saxophone" />
        </property>
    </bean>

    <bean id="dev.dposadsky.spring.performers.InstrumentalistClone" class="dev.dposadsky.spring.performers.Instrumentalist">
        <property name="song" value="#{T(dev.dposadsky.spring.SongSelector).selectSong()}" />
        <property name="instrument" value="#{instrumentalist.instrument}" />
    </bean>

    <bean id="dev.dposadsky.spring.instruments.Guitar" class="dev.dposadsky.spring.instruments.Guitar" />
    <bean id="dev.dposadsky.spring.instruments.Harmonica" class="dev.dposadsky.spring.instruments.Harmonica" />

    <bean id="dev.dposadsky.spring.performers.OneManBand" class="dev.dposadsky.spring.performers.OneManBand">
        <property name="instruments">
            <set>
                <ref bean="dev.dposadsky.spring.instruments.Guitar" />
                <ref bean="dev.dposadsky.spring.instruments.Harmonica" />
            </set>
        </property>
    </bean>

    <bean id="dev.dposadsky.spring.performers.Dancer" class="dev.dposadsky.spring.performers.Dancer" />

    <bean id="dev.dposadsky.spring.performers.OneManBandInfo" class="dev.dposadsky.spring.performers.OneManBandInfo">
        <property name="instruments">
            <map>
                <entry key="GUITAR" value-ref="dev.dposadsky.spring.instruments.Guitar" />
                <entry key="HARMONICA" value-ref="dev.dposadsky.spring.instruments.Harmonica" />
            </map>
        </property>
    </bean>

    <bean id="dev.dposadsky.spring.performers.OneManBandProps" class="dev.dposadsky.spring.performers.OneManBandProps">
        <property name="instruments">
            <props>
                <prop key="GUITAR">BRI BRING BRIBRING</prop>
                <prop key="HARMONICA">TRUTRUTUUU TRUUUUU</prop>
            </props>
        </property>
    </bean>

    <util:list id="cities">
        <bean id="one" class="dev.dposadsky.spring.instruments.Guitar" />
        <bean id="two" class="dev.dposadsky.spring.instruments.Harmonica" />
        <bean id="three" class="dev.dposadsky.spring.instruments.Saxophone" />
    </util:list>

</beans>